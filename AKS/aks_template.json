{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "managedClusters_satha_aks_name": {
            "defaultValue": "satha-aks",
            "type": "String"
        },
        "publicIPAddresses_4e93b7c6_379c_410b_9efb_5b0c95c0d545_externalid": {
            "defaultValue": "/subscriptions/b050d17e-d9e9-4de4-a42d-01dea00ec4fe/resourceGroups/MC_satha-pc_satha-aks_centralindia/providers/Microsoft.Network/publicIPAddresses/4e93b7c6-379c-410b-9efb-5b0c95c0d545",
            "type": "String"
        },
        "userAssignedIdentities_satha_aks_agentpool_externalid": {
            "defaultValue": "/subscriptions/b050d17e-d9e9-4de4-a42d-01dea00ec4fe/resourceGroups/MC_satha-pc_satha-aks_centralindia/providers/Microsoft.ManagedIdentity/userAssignedIdentities/satha-aks-agentpool",
            "type": "String"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.ContainerService/managedClusters",
            "apiVersion": "2024-03-02-preview",
            "name": "[parameters('managedClusters_satha_aks_name')]",
            "location": "centralindia",
            "sku": {
                "name": "Base",
                "tier": "Free"
            },
            "kind": "Base",
            "identity": {
                "type": "SystemAssigned"
            },
            "properties": {
                "kubernetesVersion": "1.28.9",
                "dnsPrefix": "[concat(parameters('managedClusters_satha_aks_name'), '-dns')]",
                "agentPoolProfiles": [
                    {
                        "name": "agentpool",
                        "count": 1,
                        "vmSize": "Standard_D4ds_v5",
                        "osDiskSizeGB": 128,
                        "osDiskType": "Ephemeral",
                        "kubeletDiskType": "OS",
                        "maxPods": 30,
                        "type": "VirtualMachineScaleSets",
                        "maxCount": 1,
                        "minCount": 1,
                        "enableAutoScaling": true,
                        "powerState": {
                            "code": "Running"
                        },
                        "orchestratorVersion": "1.28.9",
                        "enableNodePublicIP": true,
                        "mode": "System",
                        "osType": "Linux",
                        "osSKU": "Ubuntu",
                        "upgradeSettings": {
                            "maxSurge": "10%"
                        },
                        "enableFIPS": false,
                        "securityProfile": {
                            "sshAccess": "LocalUser",
                            "enableVTPM": false,
                            "enableSecureBoot": false
                        }
                    }
                ],
                "windowsProfile": {
                    "adminUsername": "azureuser",
                    "enableCSIProxy": true
                },
                "servicePrincipalProfile": {
                    "clientId": "msi"
                },
                "addonProfiles": {
                    "azureKeyvaultSecretsProvider": {
                        "enabled": false
                    },
                    "azurepolicy": {
                        "enabled": false
                    }
                },
                "nodeResourceGroup": "[concat('MC_satha-pc_', parameters('managedClusters_satha_aks_name'), '_centralindia')]",
                "enableRBAC": true,
                "supportPlan": "KubernetesOfficial",
                "networkProfile": {
                    "networkPlugin": "azure",
                    "networkPolicy": "none",
                    "networkDataplane": "azure",
                    "loadBalancerSku": "Standard",
                    "loadBalancerProfile": {
                        "managedOutboundIPs": {
                            "count": 1
                        },
                        "effectiveOutboundIPs": [
                            {
                                "id": "[parameters('publicIPAddresses_4e93b7c6_379c_410b_9efb_5b0c95c0d545_externalid')]"
                            }
                        ],
                        "backendPoolType": "nodeIPConfiguration"
                    },
                    "serviceCidr": "10.0.0.0/16",
                    "dnsServiceIP": "10.0.0.10",
                    "outboundType": "loadBalancer",
                    "serviceCidrs": [
                        "10.0.0.0/16"
                    ],
                    "ipFamilies": [
                        "IPv4"
                    ]
                },
                "identityProfile": {
                    "kubeletidentity": {
                        "resourceId": "[parameters('userAssignedIdentities_satha_aks_agentpool_externalid')]",
                        "clientId": "d83447fb-c65a-4650-bc43-4d32a752d3b4",
                        "objectId": "4416715d-ba4c-44b4-b8f3-b0e372f1996c"
                    }
                },
                "autoScalerProfile": {
                    "balance-similar-node-groups": "false",
                    "daemonset-eviction-for-empty-nodes": false,
                    "daemonset-eviction-for-occupied-nodes": true,
                    "expander": "random",
                    "ignore-daemonsets-utilization": false,
                    "max-empty-bulk-delete": "10",
                    "max-graceful-termination-sec": "600",
                    "max-node-provision-time": "15m",
                    "max-total-unready-percentage": "45",
                    "new-pod-scale-up-delay": "0s",
                    "ok-total-unready-count": "3",
                    "scale-down-delay-after-add": "10m",
                    "scale-down-delay-after-delete": "10s",
                    "scale-down-delay-after-failure": "3m",
                    "scale-down-unneeded-time": "10m",
                    "scale-down-unready-time": "20m",
                    "scale-down-utilization-threshold": "0.5",
                    "scan-interval": "10s",
                    "skip-nodes-with-local-storage": "false",
                    "skip-nodes-with-system-pods": "true"
                },
                "autoUpgradeProfile": {
                    "upgradeChannel": "patch",
                    "nodeOSUpgradeChannel": "NodeImage"
                },
                "disableLocalAccounts": false,
                "securityProfile": {},
                "storageProfile": {
                    "diskCSIDriver": {
                        "enabled": true,
                        "version": "v1"
                    },
                    "fileCSIDriver": {
                        "enabled": true
                    },
                    "snapshotController": {
                        "enabled": true
                    }
                },
                "oidcIssuerProfile": {
                    "enabled": false
                },
                "workloadAutoScalerProfile": {},
                "metricsProfile": {
                    "costAnalysis": {
                        "enabled": false
                    }
                },
                "nodeProvisioningProfile": {
                    "mode": "Manual"
                },
                "bootstrapProfile": {
                    "artifactSource": "Direct"
                }
            }
        },
        {
            "type": "Microsoft.ContainerService/managedClusters/agentPools",
            "apiVersion": "2024-03-02-preview",
            "name": "[concat(parameters('managedClusters_satha_aks_name'), '/agentpool')]",
            "dependsOn": [
                "[resourceId('Microsoft.ContainerService/managedClusters', parameters('managedClusters_satha_aks_name'))]"
            ],
            "properties": {
                "count": 1,
                "vmSize": "Standard_D4ds_v5",
                "osDiskSizeGB": 128,
                "osDiskType": "Ephemeral",
                "kubeletDiskType": "OS",
                "maxPods": 30,
                "type": "VirtualMachineScaleSets",
                "maxCount": 1,
                "minCount": 1,
                "enableAutoScaling": true,
                "powerState": {
                    "code": "Running"
                },
                "orchestratorVersion": "1.28.9",
                "enableNodePublicIP": true,
                "mode": "System",
                "osType": "Linux",
                "osSKU": "Ubuntu",
                "upgradeSettings": {
                    "maxSurge": "10%"
                },
                "enableFIPS": false,
                "securityProfile": {
                    "sshAccess": "LocalUser",
                    "enableVTPM": false,
                    "enableSecureBoot": false
                }
            }
        },
        {
            "type": "Microsoft.ContainerService/managedClusters/maintenanceConfigurations",
            "apiVersion": "2024-03-02-preview",
            "name": "[concat(parameters('managedClusters_satha_aks_name'), '/aksManagedAutoUpgradeSchedule')]",
            "dependsOn": [
                "[resourceId('Microsoft.ContainerService/managedClusters', parameters('managedClusters_satha_aks_name'))]"
            ],
            "properties": {
                "maintenanceWindow": {
                    "schedule": {
                        "weekly": {
                            "intervalWeeks": 1,
                            "dayOfWeek": "Sunday"
                        }
                    },
                    "durationHours": 4,
                    "utcOffset": "+00:00",
                    "startDate": "2024-06-23",
                    "startTime": "00:00"
                }
            }
        },
        {
            "type": "Microsoft.ContainerService/managedClusters/maintenanceConfigurations",
            "apiVersion": "2024-03-02-preview",
            "name": "[concat(parameters('managedClusters_satha_aks_name'), '/aksManagedNodeOSUpgradeSchedule')]",
            "dependsOn": [
                "[resourceId('Microsoft.ContainerService/managedClusters', parameters('managedClusters_satha_aks_name'))]"
            ],
            "properties": {
                "maintenanceWindow": {
                    "schedule": {
                        "weekly": {
                            "intervalWeeks": 1,
                            "dayOfWeek": "Sunday"
                        }
                    },
                    "durationHours": 4,
                    "utcOffset": "+00:00",
                    "startDate": "2024-06-23",
                    "startTime": "00:00"
                }
            }
        }
    ]
}
